<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>SummuryTask4</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!--============================================================
        Encoding support filter
    =============================================================-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.nure.levchenko.SummaryTask4.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/WEB-INF/jsp/*</url-pattern>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>


    <!--============================================================
        Security filter.
        1) admin: admin commands
        2) client: client commands
        3) commons: commands for all roles
        4) out-of-control: commands without access control
        Delimiter - space/tab
    =============================================================-->

    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>ua.nure.levchenko.SummaryTask4.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>
                manageCourses manageTeacher courseForTeacher manageStudent
            </param-value>
        </init-param>
        <init-param>
            <param-name>teacher</param-name>
            <param-value>
                teacher teacherJournalsCommand editTeacher
            </param-value>
        </init-param>
        <init-param>
            <param-name>student</param-name>
            <param-value>
                student enrollCourse editStudent filterCourses
            </param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>
                logout setLanguage updateContext languageSettings
            </param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login signUp</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <!--============================================================
       i18n Localization
   =============================================================-->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources</param-value>
    </context-param>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>en</param-value>
    </context-param>
    <context-param>
        <param-name>locales</param-name>
        <param-value>/WEB-INF/locales.properties</param-value>
    </context-param>

    <!--============================================================
        Context listener
    =============================================================-->
    <listener>
        <listener-class>ua.nure.levchenko.SummaryTask4.web.listener.ContextListener</listener-class>
    </listener>
</web-app>